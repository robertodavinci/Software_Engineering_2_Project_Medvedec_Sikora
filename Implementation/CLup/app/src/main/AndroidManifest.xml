<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clup">

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="barcode" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission-sdk-23 android:name="string"
        android:maxSdkVersion="24" />
    <!--<uses-permission android:name="android.permission.LOCATION_HARDWARE"/>-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CLup">
        <activity android:name=".ScannerController">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QrController"></activity>
        <activity android:name=".HomeController">
        </activity>
        <activity android:name=".ForgotPasswordController" />
        <activity android:name=".UserProfileController" />
        <activity android:name=".RegisterController" />
        <activity android:name=".LoginController">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>